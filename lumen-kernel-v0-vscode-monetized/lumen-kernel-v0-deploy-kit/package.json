{
  "name": "lumen-kernel-v0-deploy-kit",
  "version": "0.1.0",
  "private": true,
  "description": "LUMEN Kernel V0 (World Computer) deployment kit for Base Mainnet",
  "scripts": {
    "clean": "rimraf artifacts cache typechain deployments",
    "compile": "hardhat compile",
    "test": "hardhat test",
